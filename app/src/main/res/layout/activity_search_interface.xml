<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search"
    tools:context="com.example.saajidh.solutionseeker.SearchInterface">

    <TextView
        android:id="@+id/textView47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="35dp"
        android:text="Searching..."
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinnerSearching"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/textView47"
        android:layout_toEndOf="@+id/textView47" />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_below="@+id/textView47"
        android:layout_alignStart="@+id/textView47"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinnerSearchBy"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/textView48"
        android:layout_toEndOf="@+id/textView49" />

    <ListView
        android:id="@+id/listviewSearch"
        android:layout_width="360dp"
        android:layout_height="320dp"
        android:layout_alignStart="@+id/textView48"
        android:layout_below="@+id/textView49" />

    <Button
        android:id="@+id/btnSearchClick"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinnerSearchBy"
        android:layout_alignEnd="@+id/listviewSearch"
        android:text="Search"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView48"
        android:layout_alignStart="@+id/listviewSearch"
        android:layout_marginTop="11dp" />

    <Button
        android:id="@+id/btnItemClick"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/listviewSearch"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:text="View"
        android:textAllCaps="false" />
</RelativeLayout>
