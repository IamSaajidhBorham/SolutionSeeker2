<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/messageboard"
    tools:context="layout.message2">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="27dp"
        android:text="Received Question :-"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/askedlist"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asked Questions:-"
        android:textStyle="bold"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/askedlist"
        android:layout_alignStart="@+id/askedlist" />

    <ListView
        android:id="@+id/replylist"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_below="@+id/textView18"
        android:layout_alignStart="@+id/textView18" />

</RelativeLayout>
